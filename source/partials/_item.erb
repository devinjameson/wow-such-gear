<div class="item" id="<%= parameterize(item["item-name"]) %>">

  <div class="item__main">
    <h3 class="item__name"><%= item["item-name"] %></h3>
    <img class="item__image" src="/assets/images/<%= parameterize(item["item-name"]) + '.jpg' %>" alt="<%= 'An image of the ' + item["item-name"] + '.' %>">
  </div>

  <p class="item__description"><%= item["item-description"] %></p>

</div>
