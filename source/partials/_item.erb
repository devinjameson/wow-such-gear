<div class="item">
  <span class="item__id" id="<%= parameterize(item["item-name"]) %>"></span>
  <div class="item__main">
    <h3 class="item__name"><%= item["item-name"] %></h3>
    <img class="item__image" src="/assets/images/items/<%= parameterize(item["item-name"]) + '.jpg' %>" alt="<%= 'An image of the ' + item["item-name"] + '.' %>">
  </div>

  <p class="item__description"><%= item["item-description"] %></p>

</div>
